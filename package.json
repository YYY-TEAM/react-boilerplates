{
  "name": "umd-library-starter",
  "version": "1.0.0",
  "description": "A bootstrap for webpack3 project",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "start": "webpack-dev-server --config build/webpack.config.js --env development",
    "build": "webpack --config build/webpack.config.js --display-modules --env production"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.*.{pcss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "keywords": [
    "bootstrap",
    "webpack3"
  ],
  "author": "Leo Hui <leohxj@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.4.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.6",
    "prettier": "1.9.2",
    "style-loader": "^0.18.2",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  }
}
