{
  "name": "umd-library-starter",
  "version": "1.0.0",
  "description": "A bootstrap for webpack3 project",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config build/webpack.config.dev.babel.js",
    "build": "cross-env NODE_ENV=production webpack --config build/webpack.config.prod.babel.js --display-modules",
    "test": "jest",
    "flow": "flow check",
    "commit": "git-cz"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.*.{pcss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "keywords": [
    "bootstrap",
    "webpack3"
  ],
  "author": "Leo Hui <leohxj@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "commitizen": "^2.9.6",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.4",
    "cz-customizable": "^5.2.0",
    "eslint": "^4.4.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "flow-bin": "^0.62.0",
    "flow-webpack-plugin": "^1.2.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^5.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.6",
    "prettier": "1.9.2",
    "style-loader": "^0.18.2",
    "stylelint": "^8.3.1",
    "stylelint-config-prettier": "^2.0.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "uglifyjs-webpack-plugin": "^1.1.3",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
