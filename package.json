{
  "name": "umd-library-starter",
  "version": "1.0.0",
  "description": "A bootstrap for webpack3 project",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config scripts/webpack.config.dev.babel.js --hot",
    "build": "cross-env NODE_ENV=production webpack --config scripts/webpack.config.prod.babel.js --display-modules",
    "test": "npm run flow && jest",
    "flow": "flow check",
    "flow-typed": "flow-typed install",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.*.{pcss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "keywords": [
    "bootstrap",
    "webpack3"
  ],
  "author": "Leo Hui <leohxj@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "classnames": "^2.2.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0-beta.18",
    "react-router-dom": "^4.2.2",
    "url-search-params": "^0.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.0.1",
    "@commitlint/config-conventional": "^5.2.3",
    "@leohxj/eslint-config-dawn-react": "^0.0.3",
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-import": "^1.6.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "commitizen": "^2.9.6",
    "commitlint-config-cz": "^0.7.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.4",
    "cz-customizable": "^5.2.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "flow-bin": "^0.62.0",
    "flow-typed": "^2.2.3",
    "flow-webpack-plugin": "^1.2.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.15.0-beta.16",
    "jest": "^22.0.4",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "lint-staged": "^5.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.6",
    "prettier": "1.9.2",
    "style-loader": "^0.18.2",
    "stylelint": "^8.3.1",
    "stylelint-config-prettier": "^2.0.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "uglifyjs-webpack-plugin": "^1.1.3",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
